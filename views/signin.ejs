<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-stretch auth auth-img-bg">
                <div class="row flex-grow">
                    <div class="col-lg-5 d-flex align-items-center justify-content-center">
                        <div class="auth-form-transparent text-left p-3">
                            <div class="brand-logo">
                                <img src="/resources/shared/img/bakery_logo.png" alt="logo" />
                            </div>

                            <form class="pt-5" action="" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="txtUsername">Username</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="icon-user text-primary"></i>
                                            </span>
                                        </div>
                                        <input type="text" class="form-control form-control-lg border-left-0 ctrl-rounded" id="txtUsername" name="txtUsername" placeholder="Username" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="txtPassword">Password</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="icon-lock text-primary"></i>
                                            </span>
                                        </div>
                                        <input type="password" class="form-control form-control-lg border-left-0 ctrl-rounded" id="txtPassword" name="txtPassword" placeholder="Password" />
                                    </div>
                                </div>
                                <div class="my-2 d-flex justify-content-between align-items-center">
                                    <% if (message != '') { %>
                                    <p class="text-center text-danger"><%= message %></p>
                                    <% } %>
                                </div>
                                <div class="my-3">
                                    <button class="btn btn-block btn-primary btn-rounded font-weight-medium auth-form-btn" id="btnLogin">LOGIN</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-7 login-half-bg d-flex flex-row">
                        <p class="text-white font-weight-medium text-center flex-grow align-self-end">Copyright &copy; 2019 <a href="/">Bakery - Paystack Technical Challenge II</a>. All rights reserved.</p>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/resources/assets/main/vendors/js/vendor.bundle.base.js"></script>
    <script src="/resources/assets/main/vendors/js/vendor.bundle.addons.js"></script>
